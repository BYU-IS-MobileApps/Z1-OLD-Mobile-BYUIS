<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical" 
    android:background="@color/grey1"
    android:paddingBottom="10px">

    <TextView 
  		android:id="@+id/logo"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
     	android:layout_gravity="center"
  		android:textColor="@color/orange"
  		android:typeface="sans"
  		android:textStyle="bold"
  		android:textSize="25sp"
  		android:text="BYU: Independent Study" 
  		android:paddingBottom="10px"/>
    
    <Button
    	style="@style/CodeFont"
     	android:id="@+id/download_grades_test"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:layout_gravity="center"
     	android:text="Download Grades" 
     	android:background="@layout/custom_button"/>
     	
    <RelativeLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:paddingTop="15px" 
    	android:paddingBottom="15px"
    	android:paddingLeft="5px"
    	android:paddingRight="5px">
    	
    <Button 
        android:id="@+id/my_grades_button"
        android:layout_width="110dp"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
        android:text="@string/my_grades_button_text" 
        android:background="@layout/custom_button"/>
    
    <Button
        android:id="@+id/set_preferences"
        android:layout_width="110dp"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
        android:text="Preferences"
        android:background="@layout/custom_button" />
        
	
	<Button
		android:id="@+id/get_Enrollment"
		android:text="Get Enrollment"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/set_preferences"	
    	android:layout_marginTop="10px"	
		android:background="@layout/custom_button" />
    
	</RelativeLayout>
	
    
</LinearLayout>